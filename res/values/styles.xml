<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#669900</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:minWidth">18dp</item>
        <item name="android:maxWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="Globle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="Globle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:background">@color/background_editText</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView" parent="Globle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/Text</item>
    </style>

    <style name="TextView.subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#87a0a9</item>
    </style>

    <style name="GridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#A3A8A1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <!-- add from android asset studio -->

    <style name="Theme.Themeactionbar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_themeactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Themeactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Themeactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Themeactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Themeactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Themeactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_themeactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_themeactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Themeactionbar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Themeactionbar.Widget</item>
    </style>

    <style name="ActionBar.Solid.Themeactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_themeactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_themeactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_themeactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Themeactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Themeactionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_themeactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Themeactionbar</item>
    </style>

    <style name="PopupMenu.Themeactionbar" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_themeactionbar</item>
    </style>

    <style name="DropDownListView.Themeactionbar" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_themeactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Themeactionbar" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_themeactionbar</item>
    </style>

    <style name="DropDownNav.Themeactionbar" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_themeactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_themeactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_themeactionbar</item>
    </style>

    <style name="ProgressBar.Themeactionbar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_themeactionbar</item>
    </style>

    <style name="ActionButton.CloseMode.Themeactionbar" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_themeactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Themeactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Themeactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Themeactionbar</item>
    </style>

</resources>
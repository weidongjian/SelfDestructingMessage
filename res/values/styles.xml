<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Ribbitthem" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ribbitthem</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ribbitthem</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ribbitthem</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ribbitthem</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ribbitthem</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ribbitthem</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ribbitthem</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ribbitthem</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ribbitthem</item>
    </style>

    <style name="ActionBar.Solid.Ribbitthem" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_ribbitthem</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ribbitthem</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ribbitthem</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ribbitthem</item>
    </style>

    <style name="ActionBar.Transparent.Ribbitthem" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ribbitthem</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ribbitthem</item>
    </style>

    <style name="PopupMenu.Ribbitthem" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ribbitthem</item>
    </style>

    <style name="DropDownListView.Ribbitthem" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ribbitthem</item>
    </style>

    <style name="ActionBarTabStyle.Ribbitthem" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/tab_indicator_ab_ribbitthem</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:minWidth">18dp</item>
        <item name="android:maxWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="DropDownNav.Ribbitthem" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_ribbitthem</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ribbitthem</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ribbitthem</item>
    </style>

    <style name="ProgressBar.Ribbitthem" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ribbitthem</item>
    </style>

    <style name="ActionButton.CloseMode.Ribbitthem" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ribbitthem</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ribbitthem.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ribbitthem</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ribbitthem</item>
    </style>

    <style name="Globle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="Globle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:background">@color/background_editText</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView" parent="Globle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/Text</item>
    </style>

    <style name="TextView.subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#87a0a9</item>
    </style>

    <style name="GridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#A3A8A1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <!-- add from parse ui -->
    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">            @drawable/com_parse_ui_parse_login_button_background_selector</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/android:transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
    </style>

</resources>